<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:RezeptSafe.ViewModel"
             xmlns:model="clr-namespace:RezeptSafe.Model"
             x:Class="RezeptSafe.View.CreateRecipePage"
             x:DataType="viewmodel:CreateRecipeViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <!--<Button Text="Aus CR-Code" Margin="10" FontSize="20" Command="{Binding ScanQRCodeClickedCommand}"/>-->
            <Frame Style="{StaticResource RecipeCreateFrameStyle}">
                <VerticalStackLayout>
                    <Label Text="Rezeptname" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                    <Entry Placeholder="Titel" Text="{Binding Recipe.Title}" PlaceholderColor="Black"/>
                    <Label Text="Beschreibung" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                    <Editor Placeholder="Beschreibung" Text="{Binding Recipe.Description}" PlaceholderColor="Black"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource RecipeCreateFrameStyle}">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Label Text="Zutaten" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                        <SearchBar Placeholder="Suchfeld" Text="{Binding IngredientSearchText}" Grid.Column="1" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                    </Grid>

                    <CollectionView ItemsSource="{Binding FilteredIngredients}" 
                                    SelectionMode="Multiple"
                                    HeightRequest="300"
                                    SelectionChanged="OnIngredientsSelectionChanged">   
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Ingredient">
                                <Grid ColumnDefinitions="auto,*,100">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup Name="CommonStates">
                                            <VisualState Name="Normal"/>
                                            <VisualState Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="LightBlue" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <Label Text="{Binding Name}" Style="{StaticResource RecipeCreateInfoLabelStyle}"/>
                                    <Entry Keyboard="Numeric" Grid.Column="2" FontSize="20" Text="{Binding Amount}" IsVisible="{Binding IsSelected}"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource RecipeCreateFrameStyle}">
                <VerticalStackLayout>
                    <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                        <Label Text="Utensilien" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                        <SearchBar Placeholder="Suchfeld" Text="{Binding UtensilSearchText}" Grid.Column="1" Style="{StaticResource RecipeCreateTitleLabelStyle}"/>
                    </Grid>
                    <CollectionView ItemsSource="{Binding FilteredUtensils}" 
                                    SelectionMode="Multiple"
                                    HeightRequest="300"
                                    SelectionChanged="OnUtensilsSelectionChanged">  
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Utensil">
                                <Grid ColumnDefinitions="auto,*,100">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup Name="CommonStates">
                                            <VisualState Name="Normal"/>
                                            <VisualState Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="LightBlue" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <Label Text="{Binding Name}" Style="{StaticResource RecipeCreateInfoLabelStyle}"/>
                                    <Entry Keyboard="Numeric" Grid.Column="2" FontSize="20" Text="{Binding Amount}" IsVisible="{Binding IsSelected}"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame Style="{StaticResource RecipeCreateFrameStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Zeitangabe:" FontSize="20" Grid.Column="0"/>
                    <Entry Keyboard="Numeric" Placeholder="Zeitangabe in min" Text="{Binding Recipe.Time}"/>
                    <Label Text="Ersteller:" FontSize="20" Grid.Column="0"/>
                    <Label Text="{Binding Recipe.Username}" FontSize="20" Grid.Column="1" TextColor="White"/>
                    <Button Text="Rezept speichern" FontSize="20" Command="{Binding SaveClickedCommand}"/>
                </VerticalStackLayout>
            </Frame>

            <ActivityIndicator IsVisible="{Binding IsBusy}"
                   IsRunning="{Binding IsBusy}"
                   HorizontalOptions="Fill"
                   VerticalOptions="Center"
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="2"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>