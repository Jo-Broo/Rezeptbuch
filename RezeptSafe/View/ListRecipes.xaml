<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RezeptSafe.Model"
             xmlns:viewmodel="clr-namespace:RezeptSafe.ViewModel"
             x:DataType="viewmodel:RecipesViewModel"
             Title="{Binding Title}"
             x:Class="RezeptSafe.View.ListRecipesPage">

    <Grid ColumnSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <CollectionView Grid.ColumnSpan="2"
                        ItemsSource="{Binding Recipes}"
                        SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout HeightRequest="100" VerticalOptions="Start">
                    <Label Text="Sie haben noch keine Rezepte gespeichert" FontSize="30" Padding="10"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Recipe">
                    <Grid Padding="10">
                        <Frame Style="{StaticResource RecipeDetailFrameStyle}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}"
                                                      Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:RecipesViewModel}}, Path=GoToDetailsCommand}"/>
                            </Frame.GestureRecognizers>
                            <Grid ColumnSpacing="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Image Style="{StaticResource RecipeDetailImageStyle}" Source="dotnet_bot.png"/>
                                <VerticalStackLayout Grid.Column="1" Style="{StaticResource RecipeDetailVerticalStackStyle}">
                                    <Label Text="{Binding Title}" Style="{StaticResource RecipeDetailTitleLabelStyle}"/>
                                    <Label Text="{Binding UtensilienLabel}" Style="{StaticResource RecipeDetailInfoLabelStyle}"/>
                                    <Label Text="{Binding ZutatenLabel}" Style="{StaticResource RecipeDetailInfoLabelStyle}"/>
                                    <Label Text="{Binding ZeitLabel}" Style="{StaticResource RecipeDetailInfoLabelStyle}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--<Button Text="Neues Rezept erstellen"
                Command="{Binding GoToCreateRecipeCommand}"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="10"/>-->
        
        <!--<Button Text="Rezepte abfragen"
                Command="{Binding GetRecipesCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1"
                Margin="8"/>-->

        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="Fill"
                           VerticalOptions="Center"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>
