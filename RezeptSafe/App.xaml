<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RezeptSafe"
             xmlns:converter="clr-namespace:RezeptSafe.Converter"
             x:Class="RezeptSafe.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <converter:StepToBoolConverter x:Key="StepToBoolConverter"/>
                    <converter:FilePathToBoolConverter x:Key="FilePathToBoolConverter"/>
                    <converter:NumberToBoolConverter x:Key="NumberToBoolConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
