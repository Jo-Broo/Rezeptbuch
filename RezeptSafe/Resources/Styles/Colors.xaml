<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    <Color x:Key="Android">#4284f5</Color>
    <Color x:Key="AndroidDark">#050d40</Color>



    <Color x:Key="PageDark">#2c2c2c</Color>
    

    <Color x:Key="Primary">#D35400</Color>
    <!-- warmes Orange -->
    <Color x:Key="PrimaryDark">#A04000</Color>
    <!-- dunkleres Orange -->
    <Color x:Key="PrimaryDarkText">#4E342E</Color>
    <!-- dunkles Braun für Text -->

    <Color x:Key="Secondary">#F7DC6F</Color>
    <!-- sanftes Gelb -->
    <Color x:Key="SecondaryDarkText">#7D6608</Color>
    <!-- dunkles Gelb/Olive -->

    <Color x:Key="Tertiary">#229954</Color>
    <!-- frisches Grün -->

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Magenta">#E91E63</Color>
    <!-- kannst du für Akzente behalten -->

    <Color x:Key="OffBlack">#2C3E50</Color>
    <!-- dunkles Blau-Grau -->

    <Color x:Key="Gray100">#F0F0F0</Color>
    <Color x:Key="Gray200">#D6D6D6</Color>
    <Color x:Key="Gray300">#B0B0B0</Color>
    <Color x:Key="Gray400">#7A7A7A</Color>
    <Color x:Key="Gray500">#4A4A4A</Color>
    <Color x:Key="Gray600">#2E2E2E</Color>
    <Color x:Key="Gray900">#1B1B1B</Color>
    <Color x:Key="Gray950">#121212</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryDarkTextBrush" Color="{StaticResource PrimaryDarkText}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryDarkTextBrush" Color="{StaticResource SecondaryDarkText}"/>

    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="OffBlackBrush" Color="{StaticResource OffBlack}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>